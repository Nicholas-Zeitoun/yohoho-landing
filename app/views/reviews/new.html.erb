<h1>Leave a review for Yohoho!</h1>
<% selectable_ratings = [1, 2, 3, 4, 5] %>
<%= simple_form_for(@review) do |f| %>
  <%= f.input :rating, collection: selectable_ratings %>
  <%= f.input :content %>
  <%= f.input :email %>
  <%= f.input :mailist, label: "Sign me up for the mailing list!" %>
  <%= f.button :submit, "Submit!", class: 'btn yohoho-button'  %>
<% end %>
